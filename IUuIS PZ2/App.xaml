<Application x:Class="IUuIS_PZ2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:IUuIS_PZ2.ViewModels"
             xmlns:v="clr-namespace:IUuIS_PZ2.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:EntitiesViewModel}">
            <v:EntitiesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:GraphViewModel}">
            <v:GraphView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DisplayViewModel}">
            <v:DisplayView/>
        </DataTemplate>

        <!-- Console -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Application.Resources>
</Application>