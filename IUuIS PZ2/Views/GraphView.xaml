<UserControl x:Class="IUuIS_PZ2.Views.GraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             Background="White">
    <DockPanel>
        <!-- Kontrole iznad grafa (belo/sivo) -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="24,24,24,12">
            <ComboBox Width="280" ItemsSource="{Binding Entities}" SelectedItem="{Binding SelectedEntity}" DisplayMemberPath="Name"/>
            <Button Content="Refresh" Margin="12,0,0,0" Background="#EEE" BorderBrush="#DDD" Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <!-- G3 “bubble” graf -->
        <Border Margin="24" BorderBrush="#E6E6E6" BorderThickness="1" Background="White">
            <oxy:PlotView Model="{Binding Plot}" />
        </Border>
    </DockPanel>
</UserControl>