<UserControl x:Class="IUuIS_PZ2.Views.DisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,12">
            <ToggleButton Content="Connect" Width="100" Height="32" Margin="0,0,12,0"
                          IsChecked="{Binding ConnectMode}"/>
            <TextBlock Text="(Drag from list to a slot • Click A than B in Connect mode)" Foreground="Gray" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Levo: filtrirane liste iz VM -->
        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Solarni paneli" FontWeight="SemiBold" Margin="0,0,0,6"/>
            <ListBox ItemsSource="{Binding SolarList}"
                     BorderBrush="#E6E6E6" BorderThickness="1"
                     PreviewMouseMove="Entity_PreviewMouseMove" Margin="0,0,0,12">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" Margin="6,2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="Vetrogeneratori" FontWeight="SemiBold" Margin="0,0,0,6"/>
            <ListBox ItemsSource="{Binding WindList}"
                     BorderBrush="#E6E6E6" BorderThickness="1"
                     PreviewMouseMove="Entity_PreviewMouseMove">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" Margin="6,2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Desno: slot mreza + linije -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Canvas x:Name="LinkCanvas" IsHitTestVisible="False" Panel.ZIndex="0"/>
            <ItemsControl x:Name="SlotsItems" ItemsSource="{Binding Slots}" Panel.ZIndex="1">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Rows="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="16" Padding="4"
                                Background="White"
                                BorderBrush="#D9D9D9" BorderThickness="1"
                                AllowDrop="True" Drop="Slot_Drop" Tag="{Binding Index}">
                            <Grid>
                                <Border x:Name="Card" BorderBrush="#D9D9D9" BorderThickness="1" Padding="6"
                                        Background="White" Visibility="Visible"
                                        MouseLeftButtonDown="Card_MouseLeftButtonDown"
                                        PreviewMouseMove="Card_PreviewMouseMove">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Occupant.Name}" FontWeight="SemiBold"/>
                                        <TextBlock>
                                            <Run Text="Last: "/>
                                            <Run Text="{Binding Occupant.LastValue, StringFormat={}{0:F1}}"/>
                                            <Run Text=" MW"/>
                                        </TextBlock>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Valid"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Occupant.IsValid}" Value="False">
                                                            <Setter Property="Text" Value="Invalid"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Rectangle x:Name="Placeholder" Stroke="#D9D9D9" StrokeThickness="1"
                                           StrokeDashArray="4 4" Fill="Transparent"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Occupant}" Value="{x:Null}">
                                <Setter TargetName="Card" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>