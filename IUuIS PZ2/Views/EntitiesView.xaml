<UserControl x:Class="IUuIS_PZ2.Views.EntitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="RightAlignStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>
    
    
    <!-- CG2 Enter/Esc za P1 -->
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding ApplySearchCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding ResetSearchCommand}"/>
    </UserControl.InputBindings>

    <DockPanel Background="White">
        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="24,24,24,8">
            <Button Content="+ Add" Width="104" Height="32" Margin="0,0,12,0"
                    Background="#EEE" BorderBrush="#DDD" Command="{Binding AddCommand}"/>
            <Button Content="✎ Edit" Width="104" Height="32" Margin="0,0,12,0"
                    Background="#EEE" BorderBrush="#DDD"
                    Command="{Binding EditCommand}"
                    CommandParameter="{Binding SelectedItem, ElementName=grid}"/>
            <Button Content="🗑 Delete" Width="104" Height="32" Margin="0,0,12,0"
                    Background="#EEE" BorderBrush="#DDD"
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding SelectedItem, ElementName=grid}"/>
            <Button Content="⟲ Restart sim" Width="128" Height="32"
                    Background="#EEE" BorderBrush="#DDD" Command="{Binding RestartSimCommand}"/>
        </StackPanel>

        <!-- P1 Pretraga -->
        <StackPanel DockPanel.Dock="Top" Margin="24,0,24,12">
            <TextBlock Text="Search:" Foreground="Gray"/>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0" VerticalAlignment="Center">
                <RadioButton Content="Name" IsChecked="{Binding SearchByName}" Margin="0,0,12,0"/>
                <RadioButton Content="Type" IsChecked="{Binding SearchByType}" Margin="0,0,12,0"/>
                <TextBox Width="420" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Enter: Apply" Foreground="Gray" Margin="16,6,0,0"/>
                <TextBlock Text="Esc: Reset" Foreground="Gray" Margin="16,6,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Tabela -->
        <DataGrid x:Name="grid" Margin="24" Background="White" GridLinesVisibility="Horizontal"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  ItemsSource="{Binding EntitiesView}">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F7F7F7"/>
                    <Setter Property="Foreground" Value="#2B2B2B"/>
                    <Setter Property="BorderBrush" Value="#E6E6E6"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="200"/>
                <DataGridTextColumn Header="Last Value (MW)" Binding="{Binding LastValue}" Width="220"
                                     ElementStyle="{StaticResource RightAlignStyle}"/>
                <DataGridTemplateColumn Header="Status" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <!-- Valid tag -->
                                <Border x:Name="validTag" Background="#F7F7F7" BorderBrush="#D9D9D9" BorderThickness="1" Padding="4" CornerRadius="2" HorizontalAlignment="Left">
                                    <TextBlock Text="Valid" Foreground="#777777"/>
                                </Border>
                                <!-- Invalid tag (dashed) -->
                                <Grid x:Name="invalidTag" HorizontalAlignment="Left">
                                    <Rectangle Stroke="#BDBDBD" StrokeThickness="1" StrokeDashArray="4 4" RadiusX="2" RadiusY="2" Width="66" Height="26"/>
                                    <TextBlock Text="Invalid" Foreground="#777777" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,4,0,0"/>
                                </Grid>
                            </Grid>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsValid}" Value="True">
                                    <Setter TargetName="invalidTag" Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsValid}" Value="False">
                                    <Setter TargetName="validTag" Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>